<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sharelift"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="Login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".RegistParentActivity"
            android:icon="@drawable/logo"
            android:label="Parent Register" >
        </activity>
        <activity
            android:name=".RegistSuccessActivity"
            android:label="RegistSuccess" >
        </activity>
        <activity
            android:name=".RegistTeacherActivity"
            android:label="Teacher Register" >
        </activity>
        <activity
            android:name=".SelectActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AddRequestActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AddOfferActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AvailableOfferActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ConfirmOfferActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>